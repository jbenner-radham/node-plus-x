{
  "name": "@radham/plus-x",
  "version": "0.3.0",
  "description": "Make a file executable. A portable `chmod +x` equivalent.",
  "keywords": [
    "+x",
    "chmod",
    "cli",
    "executable",
    "execute",
    "file",
    "mode",
    "permission",
    "permissions",
    "portable",
    "terminal"
  ],
  "homepage": "https://github.com/jbenner-radham/node-plus-x#readme",
  "bugs": {
    "url": "https://github.com/jbenner-radham/node-plus-x/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbenner-radham/node-plus-x.git"
  },
  "license": "BSD-3-Clause",
  "author": "James Benner <hello@jamesbenner.com> (https://www.jamesbenner.com/)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/cjs/index.js"
    },
    "import": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/esm/index.js"
    }
  },
  "bin": {
    "plus-x": "dist/esm/cli.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "node ./scripts/build.js",
    "postbuild": "is-x ./dist/esm/cli.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "glob": "^11.0.3",
    "meow": "^14.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.4.0",
    "@radham/eslint-config": "^6.0.0",
    "@radham/is-x": "^0.2.0",
    "@types/node": "^24.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "execa": "^9.6.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.4.0",
    "tempy": "^3.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=20"
  }
}
